{
  "name": "cascade-cards-source-rest",
  "version": "0.1.0",
  "description": "Cascade Cards REST API data source adapter",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "keywords": [
    "cascade-cards",
    "rest",
    "hovercard",
    "tooltip",
    "docs"
  ],
  "homepage": "https://cascade.cards",
  "repository": {
    "type": "git",
    "url": "https://github.com/finexma-dev/cascade-cards.git"
  },
  "bugs": {
    "url": "https://github.com/finexma-dev/cascade-cards/issues"
  },
  "license": "MIT",
  "author": "Cascade Labs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "dependencies": {
    "cascade-cards-core": "workspace:*",
    "undici": "^6.18.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}

