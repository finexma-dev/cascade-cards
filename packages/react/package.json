{
  "name": "cascade-cards",
  "version": "0.2.1",
  "description": "Cascade Cards â€” CK3-style wiki hovercard components for React",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
