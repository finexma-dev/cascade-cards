    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "keywords": [
    "hovercard",
    "tooltip",
    "react",
    "docs",
    "cascade-cards"
  ],
  "homepage": "https://cascade.cards",
  "repository": {
    "type": "git",
    "url": "https://github.com/finexma-dev/cascade-cards.git"
  },
