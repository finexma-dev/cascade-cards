    "url": "https://github.com/finexma-dev/cascade-cards/issues"
  },
  "license": "MIT",
  "author": "Cascade Labs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "dependencies": {
    "@radix-ui/react-hover-card": "^1.0.7",
